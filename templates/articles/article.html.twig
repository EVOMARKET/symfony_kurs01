{% extends 'base.html.twig' %}

{% block title %}
{{article.title}}
{% endblock %}


{% block body%}
<style>
    .example-wrapper { margin: 1em auto; max-width: 600px; width: 95%; font: 22px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
         <div>
            <img src="{{ article.images|first.path }}" alt="{{ article.images|first.alt }}" width="300" >
        </div>

<h1>{{article.title}}</h1>
<span>{{article.content}}</span>
<div>
        {% for image in article.images[1:] %}

            <img src="{{ image.path }}" alt="{{ image.alt }}" width="300" >

        {% endfor %}
</div>

</div>
{% endblock %}


